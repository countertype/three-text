{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/types",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "downlevelIteration": true,
    "useDefineForClassFields": false,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/hyphenation/**/*.ts"]
}
